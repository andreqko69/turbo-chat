{
  "$schema": "./node_modules/turbo/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"],
      "env": ["NODE_ENV", "PORT", "DATABASE_URL", "BETTER_AUTH_SECRET", "BETTER_AUTH_URL"]
    },
    "lint": {
      "dependsOn": []
    },
    "typecheck": {
      "dependsOn": []
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
